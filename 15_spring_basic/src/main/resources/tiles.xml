<!DOCTYPE tiles-definitions PUBLIC "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN" "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">

<tiles-definitions>
	<definition name="default" template="/WEB-INF/views/tilesEx/layout.jsp">
		<put-attribute name="header" value="/WEB-INF/views/tilesEx/header.jsp"/>
		<put-attribute name="footer" value="/WEB-INF/views/tilesEx/footer.jsp"/>
		<put-attribute name="menu" value="/WEB-INF/views/tilesEx/menu.jsp"/>
	</definition>

	<definition name="tiles/*" extends="default">
		<put-attribute name="content" value="/WEB-INF/views/tilesEx/{1}.jsp"></put-attribute>	<!-- {1}이 라는게 * 파일명으로 들어온다 -->
	</definition>
</tiles-definitions>